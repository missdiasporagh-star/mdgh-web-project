---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Chatbot from '../components/Chatbot.astro';
import {
	Sparkles,
	Users,
	Heart,
	Target,
	Crown,
	Globe,
	Plane,
	HeartHandshake,
	Megaphone,
	GraduationCap,
	Palette,
	HandHeart,
	Calendar,
	Star,
	Trophy,
	User,
	Phone,
	Mail,
	Globe as WebIcon,
	Check,
	Instagram,
	Facebook,
	Music
} from 'lucide-astro';
import '../styles/global.css';
---

<Layout title="Miss Diaspora Ghana | Celebrating Beauty, Culture & Impact">
	<Navigation />
	<Hero />

	<!-- Pillars Section - Premium Redesign -->
	<section id="pillars" class="relative py-32 overflow-hidden" style="background: linear-gradient(135deg, #1a1a1a 0%, #2a2520 50%, #1a1a1a 100%);">
		<!-- Enhanced Background Elements -->
		<div class="absolute inset-0">
			<div class="absolute top-1/4 left-0 w-96 h-96 bg-[#F8B92F] rounded-full blur-[150px] opacity-20"></div>
			<div class="absolute bottom-1/4 right-0 w-96 h-96 bg-[#FFD700] rounded-full blur-[150px] opacity-15"></div>
			<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-radial from-[#F8B92F]/10 to-transparent rounded-full"></div>
		</div>

		<div class="container mx-auto px-6 relative z-10">
			<!-- Section Header -->
			<div class="text-center mb-20">
				<div class="inline-block mb-6">
					<span class="text-[#F8B92F] uppercase tracking-[0.3em] text-sm font-bold flex items-center gap-2">
						<Sparkles class="w-4 h-4" />
						Our Three Pillars
					</span>
				</div>
				<h2 class="text-heading text-6xl lg:text-7xl text-white mb-6 max-w-4xl mx-auto">
					The Foundation of <span class="gradient-text">Excellence</span>
				</h2>
				<p class="text-body-premium text-xl text-white/60 max-w-2xl mx-auto">
					Three core principles guide our mission to empower women across the diaspora
				</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				{[
					{
						icon: Palette,
						number: '01',
						title: 'Cultural Identity',
						description: 'Fostering a deep appreciation for African heritage among women of the diaspora through meaningful experiences and cultural immersion.'
					},
					{
						icon: GraduationCap,
						number: '02',
						title: 'Leadership Training',
						description: 'Equipping young women with essential skills, mentorship, and opportunities to thrive in their communities and beyond.'
					},
					{
						icon: HeartHandshake,
						number: '03',
						title: 'Social Impact',
						description: 'Creating lasting change by empowering women to advocate for their communities and inspire future generations.'
					}
				].map((pillar, index) => {
					const IconComponent = pillar.icon;
					return (
						<div class="pillar-card group relative glass p-10 rounded-3xl hover:scale-[1.02] transition-all duration-500 border border-[#F8B92F]/20 hover:border-[#F8B92F]/50 overflow-hidden">
							<!-- Animated Background -->
							<div class="absolute inset-0 bg-gradient-to-br from-[#F8B92F]/0 to-[#F8B92F]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

							<!-- Number Watermark -->
							<div class="absolute top-8 right-8 text-display text-8xl font-black text-[#F8B92F]/5 group-hover:text-[#F8B92F]/10 transition-colors duration-500">
								{pillar.number}
							</div>

							<!-- Icon with Premium Styling -->
							<div class="relative z-10 mb-8">
								<div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-[#F8B92F] to-[#FFD700] flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
									<IconComponent class="w-10 h-10 text-black" stroke-width="2" />
								</div>
							</div>

							<!-- Content -->
							<div class="relative z-10">
								<h3 class="text-heading text-3xl font-bold text-white mb-4 group-hover:text-[#F8B92F] transition-colors duration-300">
									{pillar.title}
								</h3>
								<p class="text-body-premium text-white/70 leading-relaxed">
									{pillar.description}
								</p>
							</div>

							<!-- Decorative Element -->
							<div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-[#F8B92F] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
						</div>
					);
				})}
			</div>
		</div>
	</section>

	<!-- About Section - Luxury Redesign -->
	<section id="about" class="relative py-32 animated-gradient grid-pattern overflow-hidden">
		<!-- Enhanced Ambient Lighting -->
		<div class="absolute inset-0">
			<div class="absolute top-1/3 right-0 w-96 h-96 bg-[#F8B92F] rounded-full blur-[150px] opacity-25"></div>
			<div class="absolute bottom-1/3 left-0 w-96 h-96 bg-[#FFD700] rounded-full blur-[150px] opacity-20"></div>
			<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[700px] h-[700px] bg-gradient-radial from-[#F8B92F]/8 to-transparent rounded-full"></div>
		</div>
		<!-- Decorative Elements -->
		<div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-[#F8B92F]/20 to-transparent"></div>
		<div class="absolute top-0 right-1/4 w-px h-full bg-gradient-to-b from-transparent via-[#F8B92F]/20 to-transparent"></div>

		<div class="container mx-auto px-6 relative z-10">
			<div class="grid lg:grid-cols-2 gap-20 items-center">
				<!-- Image with Premium Frame -->
				<div class="about-image relative group">
					<!-- Decorative Frame -->
					<div class="absolute -inset-4 bg-gradient-to-br from-[#F8B92F] via-[#FFD700] to-[#F8B92F] rounded-3xl opacity-20 blur-xl group-hover:opacity-30 transition-opacity duration-700"></div>
					<div class="absolute -inset-2 border-2 border-[#F8B92F]/30 rounded-3xl"></div>

					<!-- Image Container -->
					<div class="relative rounded-3xl overflow-hidden">
						<img
							src="/assets/images/content/a-medium-shot-of-a-confident-elegant-gha.jpg"
							alt="Miss Diaspora Ghana"
							loading="lazy"
							decoding="async"
							class="w-full h-[700px] object-cover hover:scale-105 transition-transform duration-1000"
						/>
						<!-- Overlay Gradient -->
						<div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
					</div>
				</div>

				<!-- Content -->
				<div class="space-y-8">
					<div class="inline-block">
						<span class="text-[#F8B92F] uppercase tracking-[0.3em] text-sm font-bold flex items-center gap-2">
							<Star class="w-4 h-4" />
							About MDGH
						</span>
					</div>

					<h2 class="text-heading text-6xl lg:text-7xl text-white leading-[1.1]">
						Celebrating<br />
						<span class="gradient-text">Beauty & Strength</span>
					</h2>

					<div class="space-y-6 text-body-premium text-xl text-white/70 leading-relaxed">
						<p>
							Miss Diaspora Ghana (MDGH) is dedicated to celebrating the <span class="text-white font-semibold">beauty and strength</span> of women of African descent. Our mission empowers young leaders to connect with their roots and make a lasting difference.
						</p>
						<p>
							Motivated by the rich heritage and cultural legacy of Ghana, we bridge the gap between the diaspora and their homeland through <span class="text-white font-semibold">leadership, empowerment, and cultural celebration</span>.
						</p>
					</div>

					<!-- Premium Info Cards -->
					<div class="grid grid-cols-2 gap-6 pt-8">
						<div class="glass-dark p-8 rounded-2xl border border-[#F8B92F]/20 hover:border-[#F8B92F]/50 transition-all duration-300 group">
							<div class="w-12 h-1 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] mb-4 group-hover:w-full transition-all duration-500"></div>
							<span class="text-[#F8B92F] text-sm uppercase tracking-wide font-bold">Organization</span>
							<p class="text-white font-semibold mt-3 text-lg">Nubian Crown Company Limited</p>
						</div>
						<div class="glass-dark p-8 rounded-2xl border border-[#F8B92F]/20 hover:border-[#F8B92F]/50 transition-all duration-300 group">
							<div class="w-12 h-1 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] mb-4 group-hover:w-full transition-all duration-500"></div>
							<span class="text-[#F8B92F] text-sm uppercase tracking-wide font-bold">General Manager</span>
							<p class="text-white font-semibold mt-3 text-lg">Yvonne Kofigah</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Objectives Section - Modern Premium Design -->
	<section id="objectives" class="relative py-32" style="background: linear-gradient(180deg, #1f1f1f 0%, #2a2520 50%, #1f1f1f 100%);">
		<!-- Ambient Lighting -->
		<div class="absolute inset-0 opacity-30">
			<div class="absolute top-0 left-1/4 w-64 h-64 bg-[#F8B92F] rounded-full blur-[120px]"></div>
			<div class="absolute bottom-0 right-1/4 w-64 h-64 bg-[#FFD700] rounded-full blur-[120px]"></div>
		</div>
		<div class="container mx-auto px-6 relative z-10">
			<!-- Section Header -->
			<div class="text-center mb-20">
				<div class="inline-block mb-6">
					<span class="text-[#F8B92F] uppercase tracking-[0.3em] text-sm font-bold flex items-center gap-2 justify-center">
						<Target class="w-4 h-4" />
						Our Mission & Objectives
					</span>
				</div>
				<h2 class="text-heading text-6xl lg:text-7xl text-white mb-6">
					Driving <span class="gradient-text">Change</span>
				</h2>
				<p class="text-body-premium text-xl text-white/60 max-w-3xl mx-auto">
					Miss Diaspora Ghana highlights the invaluable role that Africans abroad play in national development
				</p>
			</div>

			<!-- Objectives Grid -->
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{[
					{ icon: Target, title: 'Promote Cultural Identity', description: 'Celebrate and preserve Ghanaian heritage and traditions among diaspora communities worldwide.' },
					{ icon: Crown, title: 'Empower Young Women', description: 'Provide a platform for young women of African descent to showcase their talents and leadership potential.' },
					{ icon: Globe, title: 'Strengthen Diaspora Engagement', description: 'Foster meaningful connections between African communities abroad and their homeland.' },
					{ icon: Plane, title: 'Promote Tourism & Investment', description: 'Position Ghana as a vibrant destination for cultural tourism and global partnership opportunities.' },
					{ icon: Heart, title: 'Support Social Impact', description: 'Empower contestants to champion causes such as education, health, and women\'s empowerment.' },
					{ icon: Megaphone, title: 'Create Brand Opportunities', description: 'Offer sponsors strong visibility and engagement across diverse global audiences.' }
				].map((obj) => {
					const IconComponent = obj.icon;
					return (
						<div class="objective-card glass p-8 rounded-2xl hover:border-[#F8B92F] border-2 border-transparent transition-all duration-500 group relative overflow-hidden">
							<!-- Hover Background Effect -->
							<div class="absolute inset-0 bg-gradient-to-br from-[#F8B92F]/0 to-[#F8B92F]/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

							<!-- Icon -->
							<div class="relative z-10 mb-6">
								<div class="w-16 h-16 rounded-xl bg-[#F8B92F]/10 group-hover:bg-[#F8B92F]/20 flex items-center justify-center transition-all duration-500 group-hover:scale-110">
									<IconComponent class="w-8 h-8 text-[#F8B92F]" stroke-width="2" />
								</div>
							</div>

							<!-- Content -->
							<div class="relative z-10">
								<h3 class="text-heading text-2xl font-bold text-white mb-3 group-hover:text-[#F8B92F] transition-colors duration-300">
									{obj.title}
								</h3>
								<p class="text-body-premium text-white/70 leading-relaxed">
									{obj.description}
								</p>
							</div>

							<!-- Decorative Line -->
							<div class="absolute bottom-0 left-0 w-0 h-1 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] group-hover:w-full transition-all duration-700"></div>
						</div>
					);
				})}
			</div>
		</div>
	</section>

	<!-- Programs Section - Sophisticated Design -->
	<section id="programs" class="relative py-32 animated-gradient grid-pattern overflow-hidden">
		<!-- Enhanced Ambient Lighting -->
		<div class="absolute inset-0">
			<div class="absolute top-1/4 left-1/3 w-80 h-80 bg-[#F8B92F] rounded-full blur-[140px] opacity-25"></div>
			<div class="absolute bottom-1/4 right-1/3 w-80 h-80 bg-[#FFD700] rounded-full blur-[140px] opacity-20"></div>
			<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[650px] h-[650px] bg-gradient-radial from-[#F8B92F]/10 to-transparent rounded-full"></div>
		</div>
		<div class="container mx-auto px-6 relative z-10">
			<!-- Section Header -->
			<div class="text-center mb-20">
				<div class="inline-block mb-6">
					<span class="text-[#F8B92F] uppercase tracking-[0.3em] text-sm font-bold flex items-center gap-2 justify-center">
						<Calendar class="w-4 h-4" />
						Programs & Initiatives
					</span>
				</div>
				<h2 class="text-heading text-6xl lg:text-7xl text-white mb-6">
					Our <span class="gradient-text">Journey</span>
				</h2>
				<p class="text-body-premium text-xl text-white/60 max-w-3xl mx-auto">
					Discover the impactful programs designed to uplift and empower women across the diaspora
				</p>
			</div>

			<!-- Programs Grid -->
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				{[
					{ num: '01', icon: Users, title: 'Mentorship Program', description: 'Connects young women with experienced leaders to guide their personal and professional journeys.' },
					{ num: '02', icon: Palette, title: 'Cultural Workshops', description: 'Interactive workshops exploring Ghanaian traditions, arts, languages, and cultural practices.' },
					{ num: '03', icon: HandHeart, title: 'Community Outreach', description: 'Active engagement in local communities through impactful social initiatives and programs.' },
					{ num: '04', icon: Globe, title: 'Cultural Immersion Week', description: 'Finalists participate in cultural tours, community service, and intensive mentorship experiences.' },
					{ num: '05', icon: Star, title: 'Grand Finale Event', description: 'Professionally produced, televised finale featuring talent showcases and the crowning ceremony.' },
					{ num: '06', icon: Trophy, title: 'Post-Event Ambassadorship', description: 'One-year ambassadorial role for the crowned queen and runners-up to champion causes.' }
				].map((program) => {
					const IconComponent = program.icon;
					return (
						<div class="program-card glass-dark p-10 rounded-3xl hover:scale-[1.02] transition-all duration-500 border border-white/10 hover:border-[#F8B92F]/30 relative overflow-hidden group">
							<!-- Number Watermark -->
							<div class="absolute top-6 right-6 text-display text-8xl font-black text-[#F8B92F]/5 group-hover:text-[#F8B92F]/10 transition-colors duration-500">
								{program.num}
							</div>

							<!-- Decorative Line -->
							<div class="w-16 h-1 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] mb-8 group-hover:w-full transition-all duration-700"></div>

							<!-- Icon -->
							<div class="relative z-10 mb-6">
								<div class="w-14 h-14 rounded-xl bg-[#F8B92F]/10 flex items-center justify-center group-hover:bg-[#F8B92F]/20 transition-all duration-500">
									<IconComponent class="w-7 h-7 text-[#F8B92F]" stroke-width="2" />
								</div>
							</div>

							<!-- Content -->
							<div class="relative z-10">
								<h3 class="text-heading text-2xl font-bold text-white mb-4">
									{program.title}
								</h3>
								<p class="text-body-premium text-white/70 leading-relaxed">
									{program.description}
								</p>
							</div>
						</div>
					);
				})}
			</div>
		</div>
	</section>

	<!-- Sponsorship Section - Luxury Premium Design -->
	<section id="sponsorship" class="relative py-32 overflow-hidden" style="background: linear-gradient(135deg, #2a2520 0%, #1f1f1f 50%, #2a2520 100%);">
		<!-- Enhanced Background Glow -->
		<div class="absolute inset-0">
			<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-[#F8B92F] rounded-full blur-[200px] opacity-25"></div>
			<div class="absolute top-1/4 left-1/4 w-64 h-64 bg-[#FFD700] rounded-full blur-[100px] opacity-20"></div>
			<div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-[#F8B92F] rounded-full blur-[100px] opacity-20"></div>
		</div>

		<div class="container mx-auto px-6 relative z-10">
			<!-- Section Header -->
			<div class="text-center mb-20">
				<div class="inline-block mb-6">
					<span class="text-[#F8B92F] uppercase tracking-[0.3em] text-sm font-bold flex items-center gap-2 justify-center">
						<HeartHandshake class="w-4 h-4" />
						Partnership Opportunities
					</span>
				</div>
				<h2 class="text-heading text-6xl lg:text-7xl text-white mb-6">
					Partnership <span class="gradient-text">Levels</span>
				</h2>
				<p class="text-body-premium text-xl text-white/60 max-w-3xl mx-auto">
					Join us in empowering young women and connecting the diaspora with Ghana through strategic partnerships. Let's discuss how we can collaborate.
				</p>
			</div>

			<!-- Tiers Grid -->
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
				{[
					{
						tier: 'Platinum',
						level: 'Elite Partner',
						description: 'Title Sponsor Level',
						gradient: 'from-yellow-400 via-yellow-500 to-yellow-600',
						benefits: ['Exclusive title sponsor status', 'Maximum brand visibility', 'Premium speaking opportunities', 'VIP access & hospitality', 'Full-page advertisement placement']
					},
					{
						tier: 'Gold',
						level: 'Premier Partner',
						description: 'Major Supporter Level',
						gradient: 'from-yellow-500 via-yellow-600 to-yellow-700',
						benefits: ['Prominent brand positioning', 'VIP event access', 'Strategic media presence', 'Product showcase opportunities', 'Extensive marketing exposure']
					},
					{
						tier: 'Silver',
						level: 'Valued Partner',
						description: 'Core Supporter Level',
						gradient: 'from-gray-300 via-gray-400 to-gray-500',
						benefits: ['Brand recognition across events', 'VIP guest privileges', 'Marketing collateral inclusion', 'Social media acknowledgment', 'Community engagement opportunities']
					},
					{
						tier: 'Bronze',
						level: 'Supporting Partner',
						description: 'Foundation Level',
						gradient: 'from-amber-600 via-amber-700 to-amber-800',
						benefits: ['Official partner recognition', 'Event participation access', 'Brand acknowledgment', 'Branded materials inclusion', 'Network engagement']
					}
				].map((tier, index) => (
					<div class={`tier-card glass p-8 rounded-3xl hover:scale-[1.02] transition-all duration-500 border-2 border-[#F8B92F]/30 hover:border-[#F8B92F] relative overflow-hidden group ${index === 0 ? 'lg:transform lg:-translate-y-4' : ''}`}>
						<!-- Premium Badge -->
						<div class={`inline-flex items-center gap-2 px-5 py-2 bg-gradient-to-r ${tier.gradient} text-white font-bold rounded-full text-sm mb-6 shadow-lg`}>
							{tier.tier === 'Platinum' && <Crown class="w-4 h-4" />}
							{tier.tier}
						</div>

						<!-- Partnership Level Display -->
						<div class="mb-8">
							<h3 class="text-3xl font-bold text-white mb-2">{tier.level}</h3>
							<p class="text-[#F8B92F] text-lg font-semibold">{tier.description}</p>
						</div>

						<!-- Benefits List -->
						<ul class="space-y-4 mb-10">
							{tier.benefits.map((benefit) => (
								<li class="flex items-start gap-3 text-white/80">
									<div class="flex-shrink-0 mt-1">
										<div class="w-6 h-6 rounded-full bg-[#F8B92F]/20 flex items-center justify-center">
											<Check class="w-4 h-4 text-[#F8B92F]" stroke-width="3" />
										</div>
									</div>
									<span class="text-body-premium">{benefit}</span>
								</li>
							))}
						</ul>

						<!-- CTA Button -->
						<a
							href="#contact"
							class="block w-full text-center px-6 py-4 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] text-black font-bold rounded-full hover:shadow-2xl hover:shadow-[#F8B92F]/30 transition-all duration-300 group-hover:scale-105"
						>
							Discuss Partnership
						</a>

						<!-- Decorative Element -->
						{index === 0 && (
							<div class="absolute -top-3 -right-3 bg-gradient-to-br from-[#F8B92F] to-[#FFD700] text-black text-xs font-bold px-4 py-2 rounded-full transform rotate-12 shadow-lg">
								FEATURED
							</div>
						)}
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Partners Section - Animated Logos -->
	<section class="relative py-20 overflow-hidden" style="background: linear-gradient(180deg, #1f1f1f 0%, #1a1a1a 50%, #1f1f1f 100%);">
		<!-- Subtle Background Effects -->
		<div class="absolute inset-0">
			<div class="absolute top-1/2 left-1/4 w-64 h-64 bg-[#F8B92F] rounded-full blur-[120px] opacity-10"></div>
			<div class="absolute top-1/2 right-1/4 w-64 h-64 bg-[#FFD700] rounded-full blur-[120px] opacity-10"></div>
		</div>

		<div class="container mx-auto px-6 relative z-10">
			<!-- Section Header -->
			<div class="text-center mb-16">
				<span class="text-[#F8B92F] uppercase tracking-[0.3em] text-sm font-bold">
					Trusted By
				</span>
				<h2 class="text-heading text-4xl lg:text-5xl text-white mt-4 mb-2">
					Our <span class="gradient-text">Partners</span>
				</h2>
				<div class="w-24 h-1 bg-gradient-to-r from-transparent via-[#F8B92F] to-transparent mx-auto mt-6"></div>
			</div>

			<!-- Animated Partner Logos Grid -->
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 max-w-5xl mx-auto">
				{[
					{ src: '/assets/images/partners/diaspora_logo.png', name: 'Diaspora Affairs', delay: 0 },
					{ src: '/assets/images/partners/exim_logo.png', name: 'EXIM Bank', delay: 0.2 },
					{ src: '/assets/images/partners/kes_logo.png', name: 'KES', delay: 0.4 }
				].map((partner, index) => (
					<div
						class="partner-card group relative p-8 lg:p-10 rounded-2xl border border-[#F8B92F]/20 hover:border-[#F8B92F]/60 transition-all duration-500 hover:scale-105 hover:-translate-y-2"
						style="background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(250, 250, 250, 0.98) 100%); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);"
						data-delay={partner.delay}
					>
