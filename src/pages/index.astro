<script>
	import { gsap } from 'gsap';
	import { ScrollTrigger } from 'gsap/ScrollTrigger';

	gsap.registerPlugin(ScrollTrigger);

	// Premium scroll animations for all cards
	const animateCards = (selector: string, delay: number = 0) => {
		gsap.utils.toArray(selector).forEach((card: any, index: number) => {
			gsap.from(card, {
				scrollTrigger: {
					trigger: card,
					start: 'top bottom-=100',
					toggleActions: 'play none none reverse'
				},
				y: 60,
				opacity: 0,
				duration: 1,
				delay: delay + (index * 0.1),
				ease: 'power3.out'
			});
		});
	};

	// Animate all card sections
	animateCards('.pillar-card');
	animateCards('.objective-card');
	animateCards('.program-card');
	animateCards('.tier-card');
	animateCards('.partner-card', 0.2);

	// Animate about image with parallax effect
	gsap.from('.about-image', {
		scrollTrigger: {
			trigger: '.about-image',
			start: 'top center+=100',
			end: 'bottom top',
			scrub: 1
		},
		y: 100,
		scale: 0.95,
		opacity: 0,
		ease: 'none'
	});

	// Animate section headers
	gsap.utils.toArray('section').forEach((section: any) => {
		const header = section.querySelector('.text-center');
		if (header) {
			gsap.from(header.children, {
				scrollTrigger: {
					trigger: header,
					start: 'top center+=200'
				},
				y: 40,
				opacity: 0,
				stagger: 0.15,
				duration: 1,
				ease: 'power3.out'
			});
		}
	});

	// Floating animation for decorative elements
	gsap.utils.toArray('.absolute.opacity-5, .absolute.opacity-10').forEach((el: any) => {
		gsap.to(el, {
			y: -30,
			duration: 3 + Math.random() * 2,
			repeat: -1,
			yoyo: true,
			ease: 'power1.inOut'
		});
	});
</script>
