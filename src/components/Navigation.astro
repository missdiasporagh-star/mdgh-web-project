---
const navLinks = [
  { name: 'About', href: '#about' },
  { name: 'Objectives', href: '#objectives' },
  { name: 'Programs', href: '#programs' },
  { name: 'Partnership', href: '#sponsorship' },
  { name: 'Contact', href: '#contact' },
];
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between py-4 md:py-6">
      <!-- Logo with Crown -->
      <a href="#home" class="flex items-center group magnetic">
        <div class="relative">
          <img
            src="/assets/images/logos/mdgh main logo mini.png"
            alt="MDGH Logo"
            class="h-12 sm:h-14 md:h-16 w-auto transition-all duration-500 group-hover:scale-110 group-hover:rotate-6"
          />
          <!-- Crown Icon -->
          <svg class="absolute -top-2 -right-2 w-6 h-6 text-[#F8B92F] opacity-0 group-hover:opacity-100 transition-all duration-300 animate-bounce" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-1 xl:space-x-2">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="nav-link magnetic relative px-4 xl:px-5 py-2 text-white/80 hover:text-white font-medium text-sm xl:text-base uppercase tracking-wider transition-all duration-300 group"
          >
            <span class="relative z-10">{link.name}</span>
            <!-- Underline Effect -->
            <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-0 h-0.5 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] group-hover:w-3/4 transition-all duration-500"></span>
            <!-- Glow Effect -->
            <span class="absolute inset-0 bg-[#F8B92F]/0 group-hover:bg-[#F8B92F]/10 rounded transition-all duration-300"></span>
          </a>
        ))}

        <!-- CTA Button -->
        <a
          href="#contact"
          class="magnetic ml-4 relative px-6 xl:px-8 py-2.5 xl:py-3 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] text-black font-bold text-sm xl:text-base uppercase tracking-wider overflow-hidden group"
        >
          <span class="relative z-10 flex items-center gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Apply Now
          </span>
          <!-- Shine Effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -skew-x-12 translate-x-full group-hover:translate-x-[-200%] transition-transform duration-1000"></div>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobileMenuBtn" class="lg:hidden relative w-10 h-10 flex flex-col items-center justify-center gap-1.5 group">
        <span class="menu-bar w-6 h-0.5 bg-[#F8B92F] transition-all duration-300"></span>
        <span class="menu-bar w-6 h-0.5 bg-[#F8B92F] transition-all duration-300"></span>
        <span class="menu-bar w-6 h-0.5 bg-[#F8B92F] transition-all duration-300"></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobileMenu" class="lg:hidden fixed inset-0 bg-black/98 backdrop-blur-2xl translate-x-full transition-transform duration-500 noise">
    <div class="relative h-full flex flex-col">
      <!-- Close Button -->
      <div class="absolute top-6 right-6">
        <button id="mobileMenuClose" class="w-12 h-12 flex items-center justify-center text-[#F8B92F] hover:rotate-90 transition-transform duration-300">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Menu Content -->
      <div class="flex-1 flex flex-col items-center justify-center space-y-6 px-6">
        {navLinks.map((link, index) => (
          <a
            href={link.href}
            class="mobile-link text-4xl sm:text-5xl md:text-6xl font-bold text-white hover:text-[#F8B92F] transition-colors duration-300 relative group"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <span class="relative">
              {link.name}
              <span class="absolute -bottom-2 left-0 w-0 h-1 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] group-hover:w-full transition-all duration-500"></span>
            </span>
          </a>
        ))}

        <!-- Mobile CTA -->
        <a
          href="#contact"
          class="mobile-link mt-8 px-10 py-5 bg-gradient-to-r from-[#F8B92F] to-[#FFD700] text-black font-bold text-xl uppercase tracking-wider relative overflow-hidden group"
          style="animation-delay: 0.6s"
        >
          <span class="relative z-10 flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Apply Now
          </span>
        </a>

        <!-- Social Proof -->
        <div class="mobile-link text-center space-y-2 mt-8" style="animation-delay: 0.7s">
          <p class="text-white/40 text-sm uppercase tracking-widest">Trusted by</p>
          <p class="text-[#F8B92F] text-2xl font-bold">50+ Amazing Women</p>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Navbar scroll effect
  const navbar = document.getElementById('navbar');

  window.addEventListener('scroll', () => {
    if (window.pageYOffset > 50) {
      navbar?.classList.add('glass-dark', 'shadow-2xl', 'border-b', 'border-white/10');
      navbar?.classList.remove('bg-transparent');
    } else {
      navbar?.classList.remove('glass-dark', 'shadow-2xl', 'border-b', 'border-white/10');
      navbar?.classList.add('bg-transparent');
    }
  });

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileMenuClose = document.getElementById('mobileMenuClose');
  const menuBars = document.querySelectorAll('.menu-bar');

  function toggleMenu() {
    mobileMenu?.classList.toggle('translate-x-full');

    // Animate hamburger to X
    if (!mobileMenu?.classList.contains('translate-x-full')) {
      menuBars[0]?.classList.add('rotate-45', 'translate-y-2');
      menuBars[1]?.classList.add('opacity-0');
      menuBars[2]?.classList.add('-rotate-45', '-translate-y-2');
    } else {
      menuBars[0]?.classList.remove('rotate-45', 'translate-y-2');
      menuBars[1]?.classList.remove('opacity-0');
      menuBars[2]?.classList.remove('-rotate-45', '-translate-y-2');
    }
  }

  mobileMenuBtn?.addEventListener('click', toggleMenu);
  mobileMenuClose?.addEventListener('click', toggleMenu);

  // Close mobile menu on link click
  document.querySelectorAll('.mobile-link').forEach(link => {
    link.addEventListener('click', () => {
      toggleMenu();
    });
  });
</script>

<style>
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  #mobileMenu:not(.translate-x-full) .mobile-link {
    animation: slideInRight 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  /* Navbar glass effect - Enhanced */
  .glass-dark {
    background: transparent;
    backdrop-filter: none;
  }

  @media (min-width: 1024px) {
    .glass-dark {
      background: linear-gradient(135deg, rgba(42, 37, 32, 0.9) 0%, rgba(0, 0, 0, 0.85) 100%);
      backdrop-filter: blur(20px);
      box-shadow: 0 8px 32px rgba(248, 185, 47, 0.1);
    }
  }
</style>
